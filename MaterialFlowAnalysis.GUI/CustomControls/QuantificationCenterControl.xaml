<UserControl x:Class="MaterialFlowAnalysis.GUI.CustomControls.QuantificationCenterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaterialFlowAnalysis.GUI.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <UserControl.Resources>

        <ContextMenu x:Key="QCContextMenu">
            <MenuItem Header="Добавить поток" Command="{Binding AddFlowCommand}" CommandParameter="{Binding Path=.}"/>
            <MenuItem Header="Параметры" Command="{Binding EditCommand}" CommandParameter="{Binding Path=.}"/>
            <Separator/>
            <MenuItem Header="Удалить" Command="{Binding RemoveCommand}" CommandParameter="{Binding Path=.}"/>
        </ContextMenu>
        
    </UserControl.Resources>

    <Ellipse Height="{Binding D, Mode=OneWay}" Width="{Binding D, Mode=OneWay}" 
             Stroke="Black" StrokeThickness="2" Fill="Crimson" 
             ContextMenu="{StaticResource QCContextMenu}"
             MouseRightButtonDown="QC_OnMouseRightButtonDown"
             MouseLeftButtonDown="QC_MouseLeftButtonDown"/>
</UserControl>
