<UserControl x:Class="MaterialFlowAnalysis.GUI.CustomControls.MaterialFlowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:customControls="clr-namespace:MaterialFlowAnalysis.GUI.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Canvas>
        <Line X1="{Binding StartPoint.X}"
              Y1="{Binding StartPoint.Y}"
              X2="{Binding EndPoint.X}"
              Y2="{Binding EndPoint.Y}"
              Stroke="Blue" StrokeThickness="4"/>
        <Polygon Points="{Binding ArrowPoints}" 
                 Stroke="Blue" Fill="LawnGreen"/>
        <Label Name="TextL"
               Canvas.Left="{Binding TextPosition.X}" 
               Canvas.Top="{Binding TextPosition.Y}"
               Content="{Binding TextContent}"/>
    </Canvas>
</UserControl>

